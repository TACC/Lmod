SYS_LD_PRELOAD            := @SYS_LD_PRELOAD@
SYS_LUA_PATH              := @SYS_LUA_PATH@
SYS_LUA_CPATH             := @SYS_LUA_CPATH@
CASE_INDEPENDENT_SORTING  := @CASE_INDEPENDENT_SORTING@
